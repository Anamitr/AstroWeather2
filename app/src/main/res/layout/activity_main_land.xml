<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frags">

    <fragment class="com.example.socha.astroweather.fragments.InfoFragment"
        android:id="@+id/info_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <fragment class="com.example.socha.astroweather.fragments.SunFragment"
        android:id="@+id/sun_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <fragment class="com.example.socha.astroweather.fragments.MoonFragment"
        android:id="@+id/moon_fragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</LinearLayout>