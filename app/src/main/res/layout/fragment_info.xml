<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.socha.astroweather.fragments.InfoFragment"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/timeTextView"
                android:text="00:00:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Dł. geog.: "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:text="0"
                    android:id="@+id/longitudeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="0dp">

                <TextView
                    android:text="Szer. geog. : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:text="0"
                    android:id="@+id/latitudeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="0dp">

                <TextView
                    android:text="Odświeżaj co (sek): "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:text="1"
                    android:id="@+id/refreshRateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Miasto: "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:id="@+id/cityTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="0dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnUpdateWeather"
                    android:text="Zaktualizuj pogodę"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listViewLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:textColor="@android:color/white"
                android:layout_marginTop="0dp"
                android:gravity="center">

                <ListView
                    android:id="@+id/citiesListView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
